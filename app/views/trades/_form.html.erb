<%= form_for(@trade) do |f| %>
  <% if @trade.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@trade.errors.count, "error") %> prohibited this trade from being saved:</h2>

      <ul>
      <% @trade.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field row">
    <div class="col-xs-3">
      <div class="input-group">
        <%= f.number_field :trader_id, class: "form-control", placeholder: "Trader" %>
      </div>
    </div>
    <div class="col-xs-3">
      <div class="input-group">
        <%= f.number_field :stock_id, class: "form-control", placeholder: "Stock" %>
      </div>
    </div>
    <div class="col-xs-3">
      <div class="input-group">
        <span class="input-group-addon">$</span>
        <%= f.text_field :price, class: "form-control", placeholder: "Price (US Dollar)" %>
      </div>
    </div>
    <div class="col-xs-3">
      <div class="input-group">
        <%= f.text_field :quantity, class: "form-control", placeholder: "Quantity" %>
      </div>
    </div>
  </div>
  <hr>
  <div class="actions">
    <%= f.submit 'Create Trade', class: "btn btn-success", role: "button" %>
  </div>
<% end %>
