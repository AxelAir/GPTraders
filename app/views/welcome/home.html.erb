<% provide(:title, 'Home') %>
<% if(Trader.count > 0) %>
	<div class="center hero-unit">
		<h1>List of the Traders & Aggregate Sum</h1>
	</div>
	<table class="table table-hover margin-tb">
	    <thead>
	        <tr>
	            <th>id</th>
	            <th>Trader</th>
	            <th>Aggregate Sum</th>
	        </tr>
	    </thead>
	    <tbody>
	    	<% Trader.find(:all,
            joins:  "LEFT JOIN `trades` ON trades.trader_id = traders.id" ,
            select: "traders.id, traders.name, sum(trades.quantity*trades.price) as sumQP", 
            group:  "trades.trader_id").sort_by{ |t| t.sumQP.to_i }.each do |trader| %>
		        <tr>
		            <td><%= trader.id %></td>
		            <td><%= link_to trader.name, welcomes_trader_path(trader) %></td>
		            <td><%= trader[:sumQP].to_i %></td>
		            <!-- Trade.where(trader_id: trader.id).sum("price * quantity") -->
		        </tr>
	        <% end %>
	    </tbody>
	</table>
	<div class="center">
		<%= link_to "Add a Trader", new_trader_path, class: "btn btn-default", role: "button" %>
		<%= link_to "Add a Stock", new_stock_path, class: "btn btn-default", role: "button" %>
		<%= link_to "Add a Transaction", new_trade_path, class: "btn btn-primary", role: "button" %>
	</div>
<% else %>
	<div class="center hero-unit">
		<h1>Add a Trader to begin</h1>
	</div>
	<div class="center">
		<%= link_to "Add a Trader", new_trader_path, class: "btn btn-primary", role: "button" %>
	</div>
<% end %>	